# Redis Configuration
REDIS_URL=redis://127.0.0.1:18101
REDIS_STREAMS=rindexer_producer
CONSUMER_GROUP=postgres-sync
CONSUMER_NAME=consumer-1

# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:18100/storage
DATABASE_POOL_SIZE=10

# Processing Configuration
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000
WORKERS=4
PROCESSING_TIMEOUT_MS=30000
MAX_RETRIES=3

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# HTTP Server Configuration
HTTP_PORT=18211

# Shutdown Configuration
SHUTDOWN_TIMEOUT_SECS=30

# Analytics Worker Configuration
MAX_MESSAGES_PER_SECOND=5000
MIN_BATCH_INTERVAL_MS=10

# Queue Configuration (PostgreSQL-based analytics queue)
QUEUE_POLL_INTERVAL_MS=100     # How often to poll for new messages
QUEUE_RETENTION_HOURS=24       # Keep processed messages for 24 hours
MAX_RETRY_ATTEMPTS=3           # Max attempts before giving up on a message

# Logging Configuration
RUST_LOG=redis_postgres_sync=info,tokio=warn
RUST_BACKTRACE=1
